SRCS	= ft_isalpha.c \
		  ft_memcmp.c \
		  ft_strlcat.c \
		  ft_strrchr.c \
		  ft_atoi.c \
		  ft_isascii.c \
		  ft_memcpy.c \
		  ft_strlcpy.c \
		  ft_tolower.c \
		  ft_bzero.c \
		  ft_isdigit.c \
		  ft_memmove.c \
		  ft_strlen.c \
		  ft_toupper.c \
		  ft_calloc.c \
		  ft_isprint.c \
		  ft_memset.c \
		  ft_strncmp.c \
		  ft_isalnum.c \
		  ft_memchr.c \
		  ft_strchr.c \
		  ft_strnstr.c \
		  ft_substr.c \
		  ft_strjoin.c \
		  ft_strdup.c \
		  ft_strtrim.c \
		  ft_split.c \
		  ft_itoa.c \
		  ft_striteri.c \
		  ft_strmapi.c \
		  ft_putchar_fd.c \
		  ft_putstr_fd.c \
		  ft_putendl_fd.c \
		  ft_putnbr_fd.c

SRC_BONUS	= ft_lstnew_bonus.c

OBJS	= ${SRCS:.c=.o}

OBJS_BONUS	= ${SRCS_BONUS:.c=.o}

NAME	= libft.a
LIBC	= ar rc
CC		= cc
RM		= rm -f

CFLAGS	= -Wall -Wextra -Werror

.c.o:	
			${CC} ${CFLAGS} -c $< -o ${<:.c=.o}

${NAME}:	${OBJS}
			${LIBC} ${NAME} ${OBJS}

bonus:		all
			${CC} ${FLAGS} ${SRCS_BONUS}
			${AR} ${NAME} ${OBJS_BONUS}

all:		${NAME}

clean:
			${RM} ${OBJS} ${OBJS_BONUS}

fclean:		clean
			${RM} ${NAME}

re:			fclean all

.PHONY:		all clean fclean re bonus
